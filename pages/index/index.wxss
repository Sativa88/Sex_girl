/**index.wxss**/
.card {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 0px 5px 1px #cccccc;
    margin: 8px;
    margin-top: 39px;
    margin-bottom: 8px;
    position: relative;
}

.loadmore {
    border: 0px solid #ffffff;
    border-radius: 5px;
    background-color: #ffffff;
    box-shadow: 0px 5px 1px #cccccc;
    margin: 8px;
}

.image{
  width:100%;
  height:240px; 
}

.title {
    padding: 14px;
    font-size: 14px;
}
.topics-main{
    height: 100%
}
.top-bar{
    height: 36px;
    background: #F7FCE0;
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 1;
}
.top-bar-item{
    display: inline-block;
    width: 20%;
    color: #d3ad60;
    background-color: #eeeeee;
    text-align: center;
    line-height: 36px;
    font-size: 14px;
}